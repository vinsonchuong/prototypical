#!/usr/bin/env bash
set -o errexit
set -o nounset
# set -o xtrace
set -o pipefail

eval "$(parse-options help:h -- "$@")"

if [[ $# -ne 2 ]]
then
	help=yes
fi

if [[ $help ]]
then
	cat '/usr/share/prototypical/help/prototypical'
else
	recipe=$1
	directory=$2

	case "$recipe" in
		rails)
			;;
		*)
			echo 'Please specify a valid recipe.' >&2
			exit 1
	esac
fi
