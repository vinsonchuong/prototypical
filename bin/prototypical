#!/usr/bin/env bash
set -o errexit
set -o nounset
# set -o xtrace
set -o pipefail

eval "$(environment)"
eval "$(parse-options help:h -- "$@")"

if [[ $# -ne 2 ]]
then
	help=yes
fi

if [[ $help ]]
then
	cat "$HELP"
	exit
fi

recipe=$1
path=$(realpath "$2")
install="${LIB}/${recipe}/install"

if [[ ! -f $install ]]
then
	echo 'Please specify a valid recipe.' >&2
	exit 1
fi

export LIB
"$install" "$path"
