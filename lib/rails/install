#!/usr/bin/env bash
set -o errexit
set -o nounset
# set -o xtrace
set -o pipefail

path=$1

mkdir -p "$path"
cd "$path"

if ! gem list bundler | grep -q bundler
then
	gem install bundler
fi
cat <<-RUBY > 'Gemfile'
	source 'https://rubygems.org'
	ruby '2.2.2'
	gem 'rails', '~> 4.2.3'
	RUBY
bundle install
bundle exec rails new . \
	--skip-gemfile \
	--skip-bundle
